<div class="row">
  <div class="col-md-10 col-12 mx-auto mt-5">

    {{> messages}}

    <div class="form-group row">
      <label for="colFormLabelLg" class="col-sm-2 col-form-label ">必填欄位*：</label>
      <label for="colFormLabelLg" class="col-sm-10 col-form-label col-form-label-lg text-center">請輸入你的支出</label>
    </div>

    <form action="/records" method="POST">

      <div class="form-group row">
        <label for="name" class="col-sm-2 col-form-label col-form-label-lg">名稱*：</label>
        <div class="col-sm-10">
          <input type="text" class="form-control form-control-lg" id="name" name="name" placeholder="項目名稱"
            value="{{data.name}}" required>
        </div>
      </div>

      <div class="form-group row">
        <label for="date" class="col-sm-2 col-form-label col-form-label-lg">日期*：</label>
        <div class="col-sm-10">
          <input type="date" class="form-control form-control-lg" id="date" name="date" value="{{data.date}}" required>
        </div>
      </div>

      <div class="form-group row">
        <label for="category" class="col-sm-2 col-form-label col-form-label-lg">類別*：</label>
        <div class="col-sm-10">
          <select class="custom-select" style="height:50px;font-size:20px" id="category" name="category" required>
            {{!-- <option selected>Select</option> --}}
            <option {{#if select.home}}selected{{/if}} value="home">家居物業</option>
            <option {{#if select.transport}}selected{{/if}} value="transport">交通出行</option>
            <option {{#if select.entertain}}selected{{/if}} value="entertain">休閒娛樂</option>
            <option {{#if select.food}}selected{{/if}} value="food">餐飲食品</option>
            <option {{#if select.other}}selected{{/if}} value="other">其他</option>
          </select>
        </div>
      </div>


      <div class="form-group row">
        <label for="amount" class="col-sm-2 col-form-label col-form-label-lg">金額*：</label>
        <div class="col-sm-10">
          <input type="number" class="form-control form-control-lg" id="amount" name="amount" placeholder="項目花費"
            value="{{data.amount}}" required>
        </div>
      </div>

      <div class="form-group row">
        <label for="amount" class="col-sm-2 col-form-label col-form-label-lg">商家*：</label>
        <div class="col-sm-10">
          <input type="text" class="form-control form-control-lg" id="merchant" name="merchant" placeholder="消費店家"
            value="{{data.merchant}}" required>
        </div>
      </div>


      <div class="form-group row d-flex justify-content-end">
        <div class="col-10">
          <button type="submit" class="btn btn-primary btn-lg btn-block">新增支出</button>
        </div>
      </div>

    </form>


  </div>
</div>