<div class="container my-5 bg-light">
  <div class="row d-flex justify-content-center">
    <div class="col-12 col-md-10 border bg-info rounded-lg">

      <div class="function bg-warning d-flex align-items-center rounded-lg mt-2 p-2">
        <div class="dropdown d-flex align-items-center rounded-lg w-25 mr-1">
          <button class="w-100 btn btn-secondary btn-block dropdown-toggle" type="button" id="dropdownMenuButton"
            data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            類別
          </button>
          <div class="w-100 dropdown-menu" aria-labelledby="dropdownMenuButton">
            <a class="dropdown-item text-center" href="/records?type=home{{#if month}}&month={{month}}{{/if}}">家居物業</a>
            <a class="dropdown-item text-center"
              href="/records?type=transport{{#if month}}&month={{month}}{{/if}}">交通出行</a>
            <a class="dropdown-item text-center"
              href="/records?type=entertain{{#if month}}&month={{month}}{{/if}}">休閒娛樂</a>
            <a class="dropdown-item text-center" href="/records?type=food{{#if month}}&month={{month}}{{/if}}">餐飲食品</a>
            <a class="dropdown-item text-center" href="/records?type=other{{#if month}}&month={{month}}{{/if}}">其他</a>
            <a class="dropdown-item text-center" href="/records{{#if month}}?month={{month}}{{/if}}">所有項目</a>
          </div>
        </div>

        <div class="dropdown d-flex align-items-center rounded-lg w-25 mr-1">
          <button class="w-100 btn btn-secondary btn-block dropdown-toggle" type="button" id="dropdownMenuButton"
            data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            月份
          </button>
          <div class="w-100 dropdown-menu" aria-labelledby="dropdownMenuButton">
            <a class="dropdown-item text-center" href="/records?month=-01-{{#if type}}&type={{type}}{{/if}}">1月</a>
            <a class="dropdown-item text-center" href="/records?month=-02-{{#if type}}&type={{type}}{{/if}}">2月</a>
            <a class="dropdown-item text-center" href="/records?month=-03-{{#if type}}&type={{type}}{{/if}}">3月</a>
            <a class="dropdown-item text-center" href="/records?month=-04-{{#if type}}&type={{type}}{{/if}}">4月</a>
            <a class="dropdown-item text-center" href="/records?month=-05-{{#if type}}&type={{type}}{{/if}}">5月</a>
            <a class="dropdown-item text-center" href="/records?month=-06-{{#if type}}&type={{type}}{{/if}}">6月</a>
            <a class="dropdown-item text-center" href="/records?month=-07-{{#if type}}&type={{type}}{{/if}}">7月</a>
            <a class="dropdown-item text-center" href="/records?month=-08-{{#if type}}&type={{type}}{{/if}}">8月</a>
            <a class="dropdown-item text-center" href="/records?month=-09-{{#if type}}&type={{type}}{{/if}}">9月</a>
            <a class="dropdown-item text-center" href="/records?month=-10-{{#if type}}&type={{type}}{{/if}}">10月</a>
            <a class="dropdown-item text-center" href="/records?month=-11-{{#if type}}&type={{type}}{{/if}}">11月</a>
            <a class="dropdown-item text-center" href="/records?month=-12-{{#if type}}&type={{type}}{{/if}}">12月</a>
            <a class="dropdown-item text-center" href="/records{{#if type}}?type={{type}}{{/if}}">所有項目</a>
          </div>
        </div>

        <a href="/records?field=date{{#if nextOrderForDate}}&order={{nextOrderForDate}}{{/if}}{{#if type}}&type={{type}}{{/if}}{{#if month}}&month={{month}}{{/if}}"
          class="w-25 h-75 btn btn-primary btn-block mr-1">時間排序</a>
        <a href="/records?field=amount{{#if nextOrderForAmount}}&order={{nextOrderForAmount}}{{/if}}{{#if type}}&type={{type}}{{/if}}{{#if month}}&month={{month}}{{/if}}"
          class="w-25 btn btn-primary btn-block mb-2">金額排序</a>

      </div>

      <div id="show" class="mt-3">
        總金額：<h1>{{totalAmount}} $</h1>
      </div>
      <ul class="list-group">
        {{#each records}}
          <li class="list-group-item p-2 d-flex justify-content-center bg-light">
            <div class="row w-100 d-flex justify-content-between">
              <div class="col-9 d-flex justify-content-between">
                <div id="item detail" class="d-flex justify-content-between align-items-center">
                  <div class="d-flex justify-content-center" style="width: 70px">
                    {{#if this.home}}<i class="fas fa-home fa-3x mr-2"></i>{{/if}}
                    {{#if this.transport}}<i class="fas fa-shuttle-van fa-3x mr-2"></i>{{/if}}
                    {{#if this.entertain}}<i class="fas fa-grin-beam fa-3x mr-2"></i>{{/if}}
                    {{#if this.food}}<i class="fas fa-utensils fa-3x mr-2"></i>{{/if}}
                    {{#if this.other}}<i class="fas fa-pen fa-3x mr-2"></i>{{/if}}
                  </div>
                  <div class="mt-1">
                    <h4 class="mb-0">{{{this.name}}}({{this.merchant}})</h4>
                    <h6>{{{this.date}}}</h6>
                  </div>
                </div>
                <h4 class="mt-3" style="height:30;line-height:25px;">
                  {{{this.amount}}} $
                </h4>
              </div>
              <div class="col-auto d-flex align-items-center">
                <a href="/records/{{{this._id}}}/edit" class="btn btn-success mr-1">修改</a>
                <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#Modal{{{this._id}}}">
                  刪除
                </button>

                <div class="modal fade" id="Modal{{{this._id}}}" tabindex="-1" role="dialog"
                  aria-labelledby="ModalLabel" aria-hidden="true">
                  <div class="modal-dialog" role="document">
                    <div class="modal-content">
                      <div class="modal-header">
                        <h5 class="modal-title" id="ModalLabel">
                          您正在刪除一筆資料
                        </h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                          <span aria-hidden="true">&times;</span>
                        </button>
                      </div>
                      <div class="modal-body">
                        確定要刪除{{this.name}}嗎?
                      </div>
                      <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">放棄</button>
                        <form method="POST" action="/records/{{{this._id}}}/delete?_method=DELETE"
                          style="display: inline;">
                          <button class="btn btn-danger p-1 btn-lg" type="submit">刪除</button>
                        </form>
                      </div>
                    </div>
                  </div>
                </div>

              </div>
            </div>
          </li>
        {{/each}}
      </ul>

      <a href="/records/new" class="btn btn-primary my-3">新增支出</a>

    </div>
  </div>
</div>